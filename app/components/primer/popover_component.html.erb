<%= render Primer::BaseComponent.new(**@kwargs) do %>
  <% if message %>
    <%= render message.component do %>
      <% if heading %>
        <%= render heading.component do %>
          <%= heading.content %>
        <% end %>
      <% end %>
      <% if body %>
        <%= render body.component do %>
          <%= body.content %>
        <% end %>
      <% end %>
      <% if button %>
        <%= render button.component do %>
          <%= button.content %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
