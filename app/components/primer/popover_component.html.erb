<%= render Primer::BaseComponent.new(**@kwargs) do %>
  <%= render message.component do %>
    <% if heading %>
      <%= render heading.component do %>
        <%= heading.content %>
      <% end %>
    <% end %>
    <%= message.content %>
    <% if button %>
      <%= render button.component do %>
        <%= button.content %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
