<%= render Primer::BaseComponent.new(**@kwargs) do %>
  <% if message %>
    <%= render Primer::BaseComponent.new(**message.kwargs) do %>
      <% if heading %>
        <%= render Primer::BaseComponent.new(**heading.kwargs) do %>
          <%= heading.content %>
        <% end %>
      <% end %>
      <% if body %>
        <%= body.content %>
      <% end %>
      <% if button %>
        <% if button.tag == :button %>
          <%= render Primer::ButtonComponent.new(**button.kwargs) do %>
            <%= button.content %>
          <% end %>
        <% else %>
          <%= render Primer::BaseComponent.new(**button.kwargs) do %>
            <%= button.content %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
