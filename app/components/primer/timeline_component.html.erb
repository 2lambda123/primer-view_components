<%= render Primer::BaseComponent.new(**@kwargs) do %>
  <% items.each do |item| %>
    <%= render Primer::BaseComponent.new(**item.kwargs) do %>
      <% if item.badge %>
        <%= render Primer::BaseComponent.new(**item.badge.kwargs) do %>
      <% end %>
      <% if item.body %>
        <%= render Primer::BaseComponent.new(**item.body.kwargs) do %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
