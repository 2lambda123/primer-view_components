<% if @list %>
  <%= render(Primer::BaseComponent.new(**@wrapper_arguments)) do %>
    <%= render Primer::BaseComponent.new(**@system_arguments) do %>
      <%= icon %>
      <% if text.present? %>
        <%= text %>
      <% else %>
        <%= content %>
      <% end %>
      <%= counter %>
    <% end %>
  <% end %>
<% else %>
  <%= render Primer::BaseComponent.new(**@system_arguments) do %>
    <%= icon %>
    <% if text.present? %>
      <%= text %>
    <% else %>
      <%= content %>
    <% end %>
    <%= counter %>
  <% end %>
<% end %>
