<%= render Primer::BaseComponent.new(**@kwargs) do %>
  <% if header %>
    <div class="Box-header">
      <%= header.content %>
    </div>
  <% end %>
  <% if body %>
    <div class="Box-body">
      <%= body.content %>
    </div>
  <% end %>
  <% if rows.any? %>
    <ul>
      <% rows.each do |row| %>
        <%= render Primer::BaseComponent.new(**row.kwargs) do %>
          <%= row.content %>
        <% end %>
      <% end %>
    </ul>
  <% end %>
  <% if footer %>
    <div class="Box-footer">
      <%= footer.content %>
    </div>
  <% end %>
<% end %>
