<%= render Primer::BaseComponent.new(**@system_arguments) do %>
  <% if @align == :right %>
    <%= actions %>
  <% end %>

  <%= render body do %>
    <% tabs.each do |tab| %>
      <%= tab %>
    <% end %>
  <% end %>

  <% if @align == :left %>
    <%= actions %>
  <% end %>
<% end %>
<% tabs.each do |tab| %>
  <% if tab.panel.present? %>
    <div role="tabpanel" <%= "hidden" unless tab.selected %>>
      <%= tab.panel %>
    </div>
  <% end %>
<% end %>
