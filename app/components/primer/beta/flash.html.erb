<%= render Primer::BaseComponent.new(**@system_arguments) do %>
  <% if @icon %>
    <div class="Banner-visual">
      <%= primer_octicon @icon %>
    </div>
  <% end %>
  <div class="Banner-message">
    <p class="Banner-title"><%= content %></p>
    <% if @description %>
      <p><%= @description %></p>
    <% end %>
  </div>
  <% if action %>
    <div class="Banner-actions">
      <%= action %>
    </div>
  <% end %>
  <% if @dismissible %>
    <div class="Banner-close">
      <%= render Primer::Beta::IconButton.new(
        scheme: :invisible,
        size: :medium,
        id: "banner-close",
        icon: :x,
        "aria-label": "Dismiss"
      ) %>
    </div>
  <% end %>
<% end %>
