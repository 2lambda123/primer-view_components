<%= show_button %>
<%= render Primer::BaseComponent.new(**@system_arguments) do %>
  <focus-trap class="Overlay-focus-trap" active="when-visible">
    <%= header %>
    <% if content.present? %>
      <%= content %>
    <% else %>
      <%= body %>
      <%= footer %>
    <% end %>
  </focus-trap>
<% end %>
